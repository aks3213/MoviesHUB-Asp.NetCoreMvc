@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@model MoviesHUB.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>

    <div>
        --Screenshots--
        <div class="row">
            <div class="col-sm-6">
                <img src="@("~/images/"+Model.path1)" asp-append-version="true" width="500" height="300" />
            </div><br />
            <div class="col-sm-6">
                <img src="@("~/images/"+Model.path2)" asp-append-version="true" width="500" height="300" />
            </div><br />
        </div><br>
        <div class="row">
            <div class="col-sm-6">
                <img src="@("~/images/"+Model.path3)" asp-append-version="true" width="500" height="300" />
            </div><br />
            <div class="col-sm-6">
                <img src="@("~/images/"+Model.path4)" asp-append-version="true" width="500" height="300" />
            </div><br />
        </div>
    </div>
    
    <div>
        <br>
        --Video--<br><br>
        <div>
            <video id="video" src="@Url.Content("~/movies/"+Model.path)" controls="true" width="450" height="300" loop>
            </video>
        </div>
    </div>
</div>
<div>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    } | 
    <a asp-action="Index">Back to List</a>
</div>
