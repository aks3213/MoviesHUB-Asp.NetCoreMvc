@model MoviesHUB.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>
    <div>
        --Screenshots--
        <div>
            <div class="col-sm-10">
                <img src="@("~/images/"+Model.path1)" asp-append-version="true" width="250" height="250" />
            </div><br/>
            <div class="col-sm-10">
                <img src="@("~/images/"+Model.path2)" asp-append-version="true" width="250" height="250" />
            </div><br />
            <div class="col-sm-10">
                <img src="@("~/images/"+Model.path3)" asp-append-version="true" width="250" height="250" />
            </div><br />
            <div class="col-sm-10">
                <img src="@("~/images/"+Model.path4)" asp-append-version="true" width="250" height="250" />
            </div><br />
        </div>
    </div>

    <div>
        --Video--
        <div>
            <video id="video" src="@Url.Content("~/movies/"+Model.path)" controls="true" width="450" height="300" loop>
            </video>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
